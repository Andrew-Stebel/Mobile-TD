<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Sears Hometown and Outlet Stores Inc."
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtGov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G: 55.55%"
    			android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txtBoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B: 55.55%"
    			android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P: 55.55%"
    			android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtOwn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O: 55.55%"
    			android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A: 55.55%"
    			android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtEnv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E: 55.55%"
    			android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtSoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S: 55.55%"
    			android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtOverall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:text="Overall: 128.96%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="19sp" />

</LinearLayout>
